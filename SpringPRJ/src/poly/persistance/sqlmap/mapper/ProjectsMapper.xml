<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- JAVA와 연결할 Mapper 파일 설정 -->
<mapper namespace="poly.persistance.mapper.IProjectsMapper">

	
	
	<select id="checkLogin" parameterType="ProjectsDTO" resultType="ProjectsDTO">
	SELECT * FROM USER_INFO
	WHERE USER_ID = #{user_id} and USER_PWD = #{user_pwd}
	</select>
	
	<insert id = "insertinfo" parameterType="ProjectsDTO"> 
		INSERT INTO USER_INFO(
			USER_ID,
			USER_PWD,
			USER_NAME
		) values(
			#{user_id},
			#{user_pwd},
			#{user_name}
		)
		
	</insert>
	
	<select id="checkID" parameterType="ProjectsDTO" resultType="ProjectsDTO">
	SELECT * FROM USER_INFO
	WHERE USER_ID = #{user_id}
	</select>
	
	<select id="Search" parameterType="ProjectsDTO" resultType="ProjectsDTO">
	SELECT * FROM USER_INFO
	WHERE USER_ID = #{user_id}
	</select>
	
	<update id="New" parameterType="ProjectsDTO">
	UPDATE USER_INFO
	SET USER_PWD = #{user_pwd}
	WHERE USER_ID = #{user_id}
	
	</update>
</mapper>